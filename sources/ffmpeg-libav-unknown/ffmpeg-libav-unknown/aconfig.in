config FFMPEG_ENABLE_CUVID
        prompt "enable cuvid hardware acceleration (if enabled, the software must not be distributed!)"
        bool
        default n

config FFMPEG_ENABLE_VDPAU
        prompt "enable vdpau hardware acceleration"
        bool
        default n

config FFMPEG_AVC_DECODING
        prompt "enable H264/AVC decoding"
        bool
        default n

config FFMPEG_HEVC_DECODING
        prompt "enable H265/HEVC decoding"
        bool
        default n

config FFMPEG_AAC_ENCODING
        prompt "enable AAC encoding"
        bool
        default n

config FFMPEG_MOV_FORMAT
        prompt "enable MOV muxer/demuxer"
        bool
        default n

config FFMPEG_PROGRAMS
        prompt "enable ffmpeg programs: ffmpeg, ffprobe, ..."
        bool
        default n
